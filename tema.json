{
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "vscode-icons",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.gpuAcceleration": "on",
  "editor.fontLigatures": true,
  ///////////////////////////////////////////////////////////////////////////////
  "editor.fontFamily": "JetBrainsMono NF",
  "editor.fontSize": 18, //18 UBUNTU
  "editor.fontWeight": "200", // 400 defecto -- 200 seria perfecto
  ///////////////////////////////////////////////////////////////////////////////
  "terminal.integrated.fontFamily": "JetBrainsMono NF",
  "terminal.integrated.fontSize": 18, // 18.5 / 18 defecto ubuntu
  "terminal.integrated.fontWeight": "200", // 200 ESTA PERFECTO
  "terminal.integrated.fontWeightBold": "600", // 700 predeterminado
  ///////////////////////////////////////////////////////////////////////////////
  "terminal.integrated.scrollback": 15000, // ZOOM PREFERIDO
  "editor.tabSize": 2, // TAP PREFERIDO
  "terminal.integrated.cursorBlinking": true, // PARA QUE EL CURSOR DE LA TERMINAL PARPADEE
  ///////////////////////////////////////////////////////////////////////////////
  "workbench.colorCustomizations": {
    "[Default Dark Modern]": {
      ////////////////////////////////////////////////////////////////////////////////////
      "titleBar.activeBackground": "#0f1419", // FONDO TITULO
      "titleBar.inactiveBackground": "#0f1419", // FONDO TITULO INACTIVO
      "titleBar.activeForeground": "#cbd7dd", //LETRAS TITULO
      "titleBar.border": "#000000", // BORDE ABAJO TITULO
      //--------------------------------------------------------------
      "editorGroupHeader.tabsBackground": "#141a20", //CONTENEDOR DE PESTAÑAS
      "tab.activeBackground": "#192129", //PESTAÑA ACTIVA
      "tab.inactiveBackground": "#141a20", //PESTAÑA INACTIVA
      // "tab.activeForeground": "#ff0000", //LETRA PESTAÑA ACTIVA
      "tab.inactiveForeground": "#546E7A", // LETRA PESTAÑA INACTIVA
      //--------------------------------------------------------------
      "breadcrumb.background": "#171e26", //RUTA + oscuro
      "breadcrumb.foreground": "#546E7A", // LETRA RUTA
      //--------------------------------------------------------------
      "editorStickyScroll.background": "#182127", //ARRIBA EDITOR FONDO MAS CLARO
      "scrollbar.shadow": "#080a0c", //ARRIBA EDITOR SHADOW
      "editorStickyScrollHover.background": "#212b37", // ARRIBA EDITOR LINEA ACTIVA
      //--------------------------------------------------------------
      // "editor.background": "#151e25", //FONDO EDITOR oscuro wow
      // "editor.background": "#162529", //FONDO EDITOR oscuro wow
      "editor.background": "#142327", //FONDO EDITOR oscuro wow,
      // "editor.background": "#192129", //FONDO EDITOR defecto wow --> defecto ----->
      // "editor.background": "#1a242a", //FONDO EDITOR claro wow
      "editor.lineHighlightBackground": "#141a20", //LINEA ACTIVA EDITOR xxxxx
      // "editor.foreground": "#859daa", // LETRAS EDITOR -->defecto ocean
      "editor.foreground": "#fff", // LETRAS EDITOR SIN COLOR
      //--------------------------------------------------------------
      // "editorGutter.background": "#192129", // FONDO BARRA DE NUMEROS
      // "editorLineNumber.foreground": "#546E7A", // NUMERO INACTIVO EDITOR anterior
      "editorLineNumber.foreground": "#55727a", // NUMERO INACTIVO EDITOR nuevo
      "editorLineNumber.activeForeground": "#cbd7dd", // NUMERO ACTIVO EDITOR
      //--------------------------------------------------------------
      "activityBar.background": "#0f1419", // BARRA ACTIVIDAD FONDO + oscuro
      // "activityBar.activeBackground": "#ff0000" // BARRA ACTIVIDAD BLOQUE ACTIVO
      // "activityBar.activeBorder": "#ff0000", // BORDE ACTIVIDAD ACTIVA
      "activityBar.foreground": "#cbd7dd", // LETRAS ACTIVIDADES
      //--------------------------------------------------------------
      "sideBar.background": "#141a20", //ASIDE
      "sideBar.foreground": "#cbd7dd", //LETRA ASIDE
      "sideBarSectionHeader.background": "#0f1419", // BARRAS ASIDE
      "sideBarTitle.foreground": "#cbd7dd", // TITULO ASIDE
      //--------------------------------------------------------------
      "minimap.background": "#171e26", //MINIMAPA
      //--------------------------------------------------------------
      // "panel.border": "#546E7A", //LINEA ARRIBA TERMINAL
      // "panel.border": "#cbd7dd", //LINEA ARRIBA TERMINAL
      "panel.border": "#464f55", //LINEA ARRIBA TERMINAL
      "panel.background": "#171e26", //ARRIBA TERMINAL
      "terminal.background": "#171e26", //FONDO TERMINAL
      //--------------------------------------------------------------
      "statusBar.background": "#0f1419", //FOOTER
      "statusBar.foreground": "#cbd7dd", // LETRAS FOOTER
      ///////////////////////////////////////////////////////////////////////////////
      ///////////////////////////////////////////////////////////////////////////////
      //COLORES PERSONALIZADOS PARA LA TERMINAL
      // "terminal.foreground": "#ffffff", // texto terminal sin color
      //------
      "terminal.ansiCyan": "#91e5f6", // -- (MAIN) de git #fff986(amarillo)
      "terminal.ansiGreen": "#39ff9c", // --> USER@PC
      "terminal.ansiMagenta": "#c792ea", // --> MINGW64
      "terminal.ansiYellow": "#f78c6c", // --> ~/RUTA
      "terminal.ansiBrightBlue": "#7eaaff", // --> CARPETAS/
      ///////////////////////////////////////////////////////////////////////////////
      ///////////////////////////////////////////////////////////////////////////////
      // CONJUNTO VERDE PRUEBA ONE DARK
      // "editorGroupHeader.tabsBackground": "#151e23", //CONTENEDOR DE PESTAÑAS
      // "breadcrumb.background": "#151e23", //
      // "editor.background": "#1a242a", //FONDO EDITOR +claro -->listo
      // "sideBar.background": "#151f24", //ASIDE
      // "terminal.background": "#18232a", // FONDO TERMINAL
      ///////////////////////////////////////////////////////////////////////////////
      // "contrastBorder": "#ffffff", // borde de arriba y abajo editor
      //====================================================================
      "editorBracketMatch.background": "#45454500", // {} [] incio final
      "editorBracketMatch.border": "#ffffff00", // {} [] incio final borde
      //====================================================================
      "editor.selectionBackground": "#0000ff46", // LETRAS SELECCIONADAS
      "editor.selectionHighlightBackground": "#0000ff46", // COINCIDENCIAS manuales
      "editor.selectionHighlightBorder": "#ffffff00", // COINCIDENCIAS manuales borde
      //====================================================================
      "editor.wordHighlightBackground": "#00ff4c00", // COINCIDENCIAS automaticos
      "editor.wordHighlightBorder": "#8db4c6a8" // COINCIDENCIAS automaticos borde
    }
  },
  "editor.tokenColorCustomizations": {
    //MATERIAL OCEAN //////////////////////////////////////////
    // "variables": "#fff", // -----> blanco --> defecto ocean
    // "comments": "#555b7a", //----> ---mmmmmmm--> universal
    // "comments": "#4b5870", //----> VERDE + oscuro
    // "comments": "#55627a", //----> VERDE PREDE --> predterminado
    // "comments": "#546E7A", //----> verde
    // "comments": "#607984", //----> verde -- predeterminado one dark :o
    // "comments": "#607078", //----> verde
    // "comments": "#596469", //----> verde --> :o
    // "comments": "#58686f", //----> verde  --> verde de otoño
    "comments": "#647278", //----> verde  --> verde de otoño
    // "comments": "#6a797f", //----> verde  --> verde de otoño
    // "comments": "#707f85", //----> verde  --> verde de otoño
    // "comments": "#79909a", //----> verde  --> verde de otoño
    // "comments": "#506b77", //----> verde -- :o
    // "comments": "#476775", //----> verde
    // "comments": "#55677a", //----> verde --> anterior
    // "comments": "#546E7A", //----> verde --> verdoso
    // "comments": "#55727a", //----> verde ---> PREDETERMINADO
    // "comments": "#5c787f", //----> verde ---> PREDETERMINADO mas claro XXXXXXX ONE DARK XXXXXX
    // "comments": "#4e676e", //----> verde -- +oscuro
    // "comments": "#546E7A", //----> verde -- +oscuro
    // "comments": "#778892", //
    // "comments": "#7d8e98", // ------> XXXXXXXXXXXXXXXXXXXXXXXXXX MEJOR VISIBILIDAD
    // "comments": "#8597a2", //
    ////////////////////////////////////////////////////////////
    "textMateRules": [
      /* PRUEBA - PARA EL TEMA POR DEFECTO DE VSCODE */
      {
        // LOS NUMEROS
        "scope": ["constant.numeric.decimal.ts"],
        "settings": {
          "foreground": "#ff806d"
        }
      },
      {
        // LA PALBRA THIS
        "scope": "variable.language",
        "settings": {
          "foreground": "#d1ffd0"
        }
      },
      {
        // STRINGS
        "scope": "string",
        "settings": {
          "foreground": "#D5ECD4"
        }
      },
      {
        // PALARBAS RESERVADAS
        "scope": ["storage.type", "storage.modifier" /* async */],
        "settings": {
          "foreground": "#c792ea"
        }
      },
      {
        // TRUE / FALSE / UNDEFINNED / NULL
        "scope": "constant.language",
        "settings": {
          "foreground": "#AEADF0"
        }
      },
      {
        //FUNCIONES
        "scope": [
          // "entity.name.function.ts",
          "entity.name.function",
          "support.function",
          "support.constant.handlebars",
          "source.powershell variable.other.member",
          "entity.name.operator.custom-literal"
        ],
        "settings": {
          "foreground": "#7faafd",
          "fontStyle": "bold"
        }
      },
      {
        // NOMBRES DE LAS CONSTANTES
        "scope": [
          "variable.other.constant.object.ts",
          "variable.other.constant",
          "variable.other.enummember"
        ],
        "settings": {
          "foreground": "#fff986"
        }
      },
      {
        //NOMBRE DE LAS VARIABLES LET
        "scope": [
          "variable.other.property.ts",
          "variable",
          "meta.definition.variable.name",
          "support.variable",
          "entity.name.variable",
          "constant.other.placeholder"
        ],
        "settings": {
          "foreground": "#ff3981"
        }
      },
      {
        //TS - NOMBRE DE LOS TIPOS, NUMBER, STRING, NULL, UNDEFINNED
        "scope": [
          "support.type"
          // "support.class",
        ],
        "settings": {
          // "foreground": "#4ef3ff",
          // "foreground": "#00eeff",
          // "foreground": "#4ef3ff",
          // "foreground": "#87f7ff",
          // "foreground": "#b7faff",
          "foreground": "#86f7ff"
        }
      },
      {
        "scope": ["support.class"],
        "settings": {
          "foreground": "#fff986"
        }
      },
      {
        //TS - NOMBRES DE LAS CLASES, INTERFACES, NAMESPACES
        "scope": ["entity.name.type.interface", "entity.name.type"],
        "settings": {
          // "foreground": "#53ff65", //prov
          // "foreground": "#74ff81",
          "foreground": "#39ff9c"
        }
      },
      {
        // LA PALABRA RESERVADA NEW
        "scope": "keyword.operator.new",
        "settings": {
          "foreground": "#c792ea"
        }
      },
      {
        "scope": "keyword.operator.expression",
        "settings": {
          "foreground": "#c792ea"
        }
      },
      {
        "scope": "keyword.control",
        "settings": {
          "foreground": "#c792ea"
        }
      },
      /* HTML */
      {
        // COLORE DE LOS TAGS DEL HTML
        "scope": "entity.name.tag",
        "settings": {
          "foreground": "#ff3981"
        }
      },
      {
        //COLOR DE LOS ATRIUTO DEL HTML
        "scope": "entity.other.attribute-name",
        "settings": {
          "foreground": "#f78c6c"
        }
      },
      {
        //COLOR DE LOS <> DE HTML
        "scope": "punctuation.definition.tag",
        "settings": {
          "foreground": "#9ae2ff"
        }
      },
      {
        //COLOR DE LOS STRINGS EN HTML
        "scope": [
          "string.quoted.double.html",
          "meta.attribute.rel.html",
          "meta.tag.metadata.link.void.html",
          "text.html.derivative"
        ],
        "settings": {
          "foreground": "#39ff9c"
        }
      },
      {
        "scope": "text.html.derivative",
        "settings": {
          "foreground": "#fff"
        }
      },
      /* CSS */
      {
        // cambiar color del atributo de #ID CSS
        "scope": "entity.other.attribute-name.id.css",
        "settings": {
          "foreground": "#d7a0fb"
        }
      },
      {
        // cambiar color del atributo de .CLASS CSS
        "scope": "entity.other.attribute-name.class.css",
        "settings": {
          "foreground": "#39ff9c"
        }
      },
      {
        // color de pseudoclases y seudoelementos CSS
        "scope": [
          "entity.other.attribute-name.pseudo-class.css",
          "entity.other.attribute-name.pseudo-element.css"
        ],
        "settings": {
          "foreground": "#fff45b", // amarillo
          "fontStyle": "italic"
        }
      },
      {
        // color de > + ~ CSS
        "scope": "keyword.operator.combinator.css",
        "settings": {
          "foreground": "#d7a0fb"
        }
      },
      {
        // color de: &__elemento de sass
        "scope": "entity.other.attribute-name.parent-selector-suffix.css",
        "settings": {
          "foreground": "#c792ea"
        }
      },
      {
        //COLOR DE LOS TAGS HTML EN EL CSS
        "scope": "entity.name.tag.css",
        "settings": {
          "foreground": "#ff3981"
        }
      },
      {
        // COLOR DE LAS MEDIDAS (VALOR + TIPO)EN CSS
        "scope": ["keyword.other.unit", "constant.numeric"],
        "settings": {
          "foreground": "#f78c6c"
        }
      },
      {
        //COLOR DE IMPORTANT + ...EN CSS
        "scope": "keyword",
        "settings": {
          "foreground": "#9797ff"
        }
      },
      /* COMPONENTE <APP> EN REACT */
      {
        "scope": ["support.class.component.tsx"],
        "settings": {
          "foreground": "#fff986"
        }
      },
      /* SCSS */
      /* SCSS */
      /* SCSS */
      {
        // variables de SASS
        "scope": ["variable.scss"],
        "settings": {
          // "foreground": "#ff3168"
          "foreground": "#ff3981"
        }
      },
      {
        //keys: de SASS
        "scope": ["support.type.property-name.css", "meta.property-name.scss"],
        "settings": {
          "foreground": "#76f0ff"
        }
      },
      {
        // :valores SASS
        "scope": [
          "support.constant.property-value.css",
          "keyword.other.unit.fr.css",
          "constant.numeric.css"
        ],
        "settings": {
          // "foreground": "#f79250",
          "foreground": "#f78c6c"
        }
      },
      {
        //SIGNO & EN SASS
        "scope": ["entity.name.tag.reference.scss"],
        "settings": {
          "foreground": "#a6e227"
        }
      },
      {
        "scope": ["meta.at-rule.warn.scss"],
        "settings": {
          // "foreground": "#f3b4f1", // ROSA
          // "foreground": "#9897ff", //MORADO
          "foreground": "#ff9bc5"
        }
      }
    ]
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "vsicons.dontShowNewVersionMessage": true,
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "settingsSync.ignoredExtensions": [
    "bierner.emojisense",
    "aaron-bond.better-comments",
    "sporiley.css-auto-prefix",
    "eamodio.gitlens",
    "bierner.markdown-preview-github-styles"
  ],
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "editor.stickyScroll.enabled": true, // para activar la caja de arriba del editor
  "editor.cursorBlinking": "expand",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.linkedEditing": true,
  /* VSCODE */
  "liveServer.settings.donotVerifyTags": true,
  "editor.minimap.enabled": false,
  "files.refactoring.autoSave": false,
  "security.workspace.trust.untrustedFiles": "open",
  //CONFIGURACION LINEAS DE REFERENCIA EN IDENTACION
  "editor.guides.indentation": true, // ACTIVAR LINEAS DE GRUIA
  "editor.guides.bracketPairs": true, // LINEAS VERTICALES COLORES -- ANTES "active"
  "editor.guides.bracketPairsHorizontal": "active", // LINEAS HORIZONTALES COLORES  -- ANTES "active"
  "editor.guides.highlightActiveBracketPair": true, // NEGRITA en la linea ACTIVA
  /////////////POWER MODE///////////////////
  //////////////////////////////////////////
  "px-to-rem.px-per-rem": 10, //USAR 10px para 1 rem
  //////////////////////////////////////////
  //// EMMET ///////////////
  /////////////////////////////////////////
  // SOLUCIONAR ERRORES DE EMMET INPUT*6 ...
  // AL USAR EMMET, SE PONGA EN LA SIGUIENTE LINEA LOS ELEMENTOS EN-LINEA DEL HTML
  "emmet.syntaxProfiles": {
    /* solucionar el problema en HTML */
    "html": {
      "inline_break": true
    },
    /* solucionar el problema en REACT */
    "jsx": {
      "inline_break": true
    }
  },
  //CAUSA PROBLEMAS Y NO DEJA USAR RAFC Y CLG EN RRAECT - OJOOOOOOOOOOO
  // PARA ACTIVAR EMMET EN REACT //////////
  /////////////////////////////////////////
  //Esta linea activa la opción de usar emmet en React
  // "emmet.includeLanguages": {
  //   "javascript": "javascriptreact",
  //   "jsx-sublime-babel-tags": "javascriptreact",
  // },
  //Esta linea es muy útil, nos permite usar emmet con componentes que no sean HTML.
  //Por ejemplo un componente de react que escribamos llamado Layout, al darle tab
  //nos lo mostrará como <Layout></Layout>
  "emmet.triggerExpansionOnTab": true,
  "breadcrumbs.enabled": false,
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "terminal.integrated.env.windows": {},
  "[python]": {
    "editor.formatOnType": true
  },
  "errorLens.excludeBySource": ["Pylint(C0103:invalid-name)"],
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "totalTypeScript.hideAllTips": false,
  "totalTypeScript.hideBasicTips": false,
  "totalTypeScript.hiddenTips": [
    "basic-types",
    "type-alias-declaration",
    "interface-declaration",
    "variable-type-annotation",
    "typing-function-parameters",
    "ts-object-type",
    "passing-generics-to-types",
    "union-type",
    "literal-type",
    "function-return-type",
    "as-assertion",
    "typeof",
    "array-type",
    "never-keyword",
    "undefined-keyword",
    "tuple-type",
    "generic-slots-in-functions",
    "any-type",
    "record-utility-type",
    "null-keyword",
    "optional-object-property",
    "type-alias-with-generics",
    "bigint",
    "non-null-expression",
    "mapped-type",
    "keyof",
    "as-const"
  ],
  "eslint.format.enable": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "notebook.formatOnSave.enabled": true,
  "editor.matchBrackets": "never",
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "standard.autoFixOnSave": true,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Ubuntu (WSL)": {
      "path": "C:\\Windows\\System32\\wsl.exe",
      "args": ["-d", "Ubuntu"]
    }
  },
  "tabnine.experimentalAutoImports": true,
  "editor.inlineSuggest.enabled": true,
  "css.lint.unknownAtRules": "ignore",
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },
  "reactSnippets.settings.importReactOnTop": false,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  } /* DESACTIVAR QUE LAS LLAVES ACTIVAS SE MARQUEN EN UN RECTANGULO */,
  /* ACTIVAR LO DEL SONAR INT Y LA CAJA AZUL?? */
  "eslint.lintTask.enable": true,
  "sonarlint.rules": {
    "javascript:S4123": {
      "level": "off"
    }
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "files.eol": "\n",
  "terminal.integrated.env.linux": {},
  "workbench.activityBar.visible": false,
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}